		/>

		
	<Elements>
		<VfPanel 
			id="excession.vfpanel1" 
			scale="1" 
			fgcolor="0x1ECEF7" 
			bgcolor="0x000000" 
			/>
			
		<VfPanel 
			id="excession.vfpanel2" 
			scale="2" 
			fgcolor="0x1ECEF7" 
			bgcolor="0x000000" 
			/>
			
		<!-- main display (small) -->
		<GroupDef 
			id="excession.smallvfd" 
			background="/main.png" 
			mask="/main_mask.png" 
			roll="/main_roll.png" 
			down="/main_down.png" 
			width="336" height="81">
			
			<Element id="excession.vfpanel1" x="8" y="12" />
		</GroupDef>

		<!-- main display (large) -->
        <GroupDef 
			id="excession.largevfd"
	        background="/main2.png"
	        mask="/main2_mask.png"
	        roll="/main2_roll.png"
	        down="/main2_down.png"
			width="656"
			height="116">
			
            <Element id="excession.vfpanel2" x="8" y="15" />
        </GroupDef>
		
		<!-- main display (thin) -->
        <GroupDef 
			id="excession.thinvfd"
	        background="/main3.png"
	        mask="/main3_mask.png"
	        down="/main3_down.png"
			width="411"
			height="41">
			
            <Element id="excession.vfpanel1" x="6" y="3" />
        </GroupDef>
		
		
		<!-- remote control (small) -->
		<GroupDef 
			id="excession.playbuttons" 
			background="/remote.png" 
			mask="/remote_mask.png" 
			roll="/remote_roll.png" 
			down="/remote_down.png" 
			bgcolor="0xcdb9bc" 
			width="336" height="109"
			/>
			
		<!-- remote control (large) -->
		<GroupDef 
			id="excession.playbuttons2" 
			background="/remote2.png" 
			mask="/remote2_mask.png" 
			roll="/remote2_roll.png" 
			down="/remote2_down.png" 
			bgcolor="0xcdb9bc" 
			width="656" height="55"
			/>
			
